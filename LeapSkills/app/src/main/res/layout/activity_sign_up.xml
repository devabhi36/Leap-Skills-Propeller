<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@color/app_theme">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_theme">

        <android.support.v7.widget.CardView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E6E6E6"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/logo2"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/worksans_regular"
            android:text="Personal Information"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/iv1"
            android:background="@drawable/title_fill"/>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv"
            android:paddingTop="20dp"
            android:paddingBottom="49dp"
            android:paddingRight="49dp"
            android:paddingLeft="49dp"
            tools:context=".sign_up"
            android:background="@color/app_theme">



    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/worksans_regular"
        android:text="First Name"
        android:textAlignment="center"
        android:textColor="#040404"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv1"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/worksans_regular"
        android:textSize="12dp"
        android:textColor="@color/button"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fname"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/worksans_regular"
        android:text="Last Name"
        android:textAlignment="center"
        android:textColor="#040404"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv2"
        android:layout_below="@+id/tv2"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/worksans_regular"
        android:textSize="12dp"
        android:textColor="@color/button"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth(Password)"
        android:layout_below="@+id/lname"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:textColor="#040404"
        android:textAlignment="center"
        android:fontFamily="@font/worksans_regular"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv3"
        android:layout_below="@+id/tv3"
        android:layout_marginTop="15dp"
        android:hint="DDMMYYYY"
        android:textColorHint="#040404"
        android:inputType="number"
        android:textSize="12dp"
        android:fontFamily="@font/worksans_regular"
        android:textColor="@color/button"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Date of Birth(Password)"
        android:layout_below="@+id/dob"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:textColor="#040404"
        android:textAlignment="center"
        android:fontFamily="@font/worksans_regular"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/c_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv4"
        android:layout_below="@+id/tv4"
        android:layout_marginTop="15dp"
        android:hint="DDMMYYYY"
        android:textColorHint="#040404"
        android:inputType="number"
        android:textSize="12dp"
        android:fontFamily="@font/worksans_regular"
        android:textColor="@color/button"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_below="@+id/c_dob"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:textColor="#040404"
        android:textAlignment="center"
        android:fontFamily="@font/worksans_regular"
        android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textAlignment="center"
            android:layout_alignTop="@+id/tv5"
            android:layout_alignStart="@+id/c_dob"
            android:layout_below="@+id/tv5"
            android:layout_marginTop="30dp"
            android:textColor="#040404"
            android:textSize="12dp"
            android:fontFamily="@font/worksans_regular"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textAlignment="center"
            android:layout_alignTop="@+id/tv5"
            android:layout_below="@+id/tv5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="#040404"
            android:textSize="12dp"
            android:fontFamily="@font/worksans_regular"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            android:textAlignment="center"
            android:layout_alignTop="@+id/tv5"
            android:layout_below="@+id/tv5"
            android:layout_alignEnd="@+id/c_dob"
            android:layout_marginTop="30dp"
            android:textColor="#040404"
            android:textSize="12dp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/worksans_regular"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@+id/rb1"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:textColor="#040404"
        android:textAlignment="center"
        android:fontFamily="@font/worksans_regular"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv6"
        android:layout_below="@+id/tv6"
        android:layout_marginTop="15dp"
        android:textSize="12dp"
        android:fontFamily="@font/worksans_regular"
        android:inputType="textEmailAddress"
        android:textColor="@color/button"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:layout_below="@+id/email"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:textColor="#040404"
        android:textAlignment="center"
        android:fontFamily="@font/worksans_regular"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/mob_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv7"
        android:layout_below="@+id/tv7"
        android:layout_marginTop="15dp"
        android:textSize="12dp"
        android:inputType="number"
        android:fontFamily="@font/worksans_regular"
        android:textColor="@color/button"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Town"
        android:layout_below="@+id/mob_no"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:textColor="#040404"
        android:textAlignment="center"
        android:fontFamily="@font/worksans_regular"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/htown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv8"
        android:layout_below="@+id/tv8"
        android:layout_marginTop="15dp"
        android:textSize="12dp"
        android:fontFamily="@font/worksans_regular"
        android:textColor="@color/button"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="District"
        android:layout_below="@+id/htown"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:textColor="#040404"
        android:textAlignment="center"
        android:fontFamily="@font/worksans_regular"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/district"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv9"
        android:layout_below="@+id/tv9"
        android:layout_marginTop="15dp"
        android:textSize="12dp"
        android:fontFamily="@font/worksans_regular"
        android:textColor="@color/button"
        android:gravity="center"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:text="Professional Information"
            android:textAlignment="center"
            android:fontFamily="@font/worksans_regular"
            android:layout_below="@+id/rl1"
            android:background="@drawable/title_fill"/>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv0"
            android:paddingBottom="49dp"
            android:paddingRight="49dp"
            android:paddingLeft="49dp"
            tools:context=".sign_up"
            android:background="@color/app_theme">

    <TextView
        android:id="@+id/tv10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College"
        android:layout_marginTop="25dp"
        android:textSize="16dp"
        android:textColor="#040404"
        android:textAlignment="center"
        android:fontFamily="@font/worksans_regular"
        android:textStyle="bold"/>


    <Spinner
        android:id="@+id/clg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv10"
        android:layout_below="@+id/tv10"
        android:layout_marginTop="30dp"
        android:textSize="12dp"

        android:fontFamily="@font/worksans_regular"/>

    <TextView
        android:id="@+id/tv11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stream"
        android:layout_below="@+id/clg"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:textColor="#040404"
        android:textAlignment="center"
        android:fontFamily="@font/worksans_regular"
        android:textStyle="bold"/>


    <Spinner
        android:id="@+id/stream"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv11"
        android:layout_below="@+id/tv11"
        android:layout_marginTop="30dp"
        android:textSize="12dp"

        android:fontFamily="@font/worksans_regular"/>

    <TextView
        android:id="@+id/tv12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College Year"
        android:layout_below="@+id/stream"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:textColor="#040404"
        android:textAlignment="center"
        android:fontFamily="@font/worksans_regular"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/clg_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv12"
        android:layout_below="@+id/tv12"
        android:layout_marginTop="30dp"
        android:textSize="12dp"
        android:fontFamily="@font/worksans_regular"/>

    <TextView
        android:id="@+id/tv13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College Roll No."
        android:layout_below="@+id/clg_year"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:textColor="#040404"
        android:textAlignment="center"
        android:fontFamily="@font/worksans_regular"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/clg_roll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv13"
        android:layout_below="@+id/tv13"
        android:layout_marginTop="15dp"
        android:textSize="12dp"
        android:fontFamily="@font/worksans_regular"
        android:textColor="@color/button"
        android:gravity="center"/>

    <Button
        android:id="@+id/fsign_up"
        android:layout_width="126dp"
        android:layout_height="36dp"
        android:layout_below="@+id/clg_roll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_fill"
        android:fontFamily="@font/barlow_r"
        android:onClick="fsign_up"
        android:shadowColor="#000000"
        android:text="REGISTER"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="14dp" />

</RelativeLayout>

    </RelativeLayout>
</ScrollView>
</RelativeLayout>