<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="#fff">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:padding="49dp"
                android:layout_height="match_parent"
                tools:context=".sign_up"
                android:background="@drawable/ic_scattered_triangles"
                android:id="@+id/r6">


                <TextView
                    android:id="@+id/cbtv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Center"
                    android:layout_marginTop="45dp"
                    android:textSize="16dp"
                    android:textColor="#222222"
                    android:textAlignment="center"
                    android:fontFamily="@font/worksans_medium"/>


                <Spinner
                    android:id="@+id/center"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignTop="@+id/cbtv1"
                    android:layout_below="@+id/cbtv1"
                    android:layout_marginTop="30dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/worksans_regular"
                    android:background="@drawable/spinner_back"/>

                <TextView
                    android:id="@+id/cbtv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batch Name"
                    android:layout_below="@+id/center"
                    android:layout_marginTop="20dp"
                    android:textSize="16dp"
                    android:textColor="#222222"
                    android:textAlignment="center"
                    android:fontFamily="@font/worksans_medium"/>
                <EditText
                    android:id="@+id/batch_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/cbtv2"
                    android:layout_below="@+id/cbtv2"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/button"/>

                <TextView
                    android:id="@+id/cbtv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batch Location"
                    android:layout_below="@+id/batch_name"
                    android:layout_marginTop="20dp"
                    android:textSize="16dp"
                    android:textColor="#222222"
                    android:textAlignment="center"
                    android:fontFamily="@font/worksans_medium"/>
                <EditText
                    android:id="@+id/batch_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/cbtv3"
                    android:layout_below="@+id/cbtv3"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/button"/>

                <TextView
                    android:id="@+id/cbtv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time (Click Me)"
                    android:layout_below="@+id/batch_location"
                    android:layout_marginTop="20dp"
                    android:textSize="16dp"
                    android:textColor="#222222"
                    android:textAlignment="center"
                    android:fontFamily="@font/worksans_medium"/>
                <EditText
                    android:id="@+id/batch_stime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/cbtv4"
                    android:layout_below="@+id/cbtv4"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    android:hint="HH:MM"
                    android:textColorHint="@color/button"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/button"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/cbtv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Time (Click Me)"
                    android:layout_below="@+id/batch_stime"
                    android:layout_marginTop="20dp"
                    android:textSize="16dp"
                    android:textColor="#222222"
                    android:textAlignment="center"
                    android:fontFamily="@font/worksans_medium"/>
                <EditText
                    android:id="@+id/batch_etime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/cbtv5"
                    android:layout_below="@+id/cbtv5"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    android:hint="HH:MM"
                    android:textColorHint="@color/button"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/button"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/cbtv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CEFR Score"
                    android:layout_below="@+id/cbtv5"
                    android:layout_marginTop="40dp"
                    android:textSize="16dp"
                    android:textColor="#222222"
                    android:textAlignment="center"
                    android:fontFamily="@font/worksans_medium"/>


                <Spinner
                    android:id="@+id/cefr_score"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignTop="@+id/cbtv6"
                    android:layout_below="@+id/cbtv6"
                    android:layout_marginTop="30dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/worksans_regular"
                    android:background="@drawable/spinner_back"/>

                <TextView
                    android:id="@+id/cbtv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trainer"
                    android:layout_below="@+id/cefr_score"
                    android:layout_marginTop="20dp"
                    android:textSize="16dp"
                    android:textColor="#222222"
                    android:textAlignment="center"
                    android:fontFamily="@font/worksans_medium"/>

                <Spinner
                    android:id="@+id/cb_trainer"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignTop="@+id/cbtv7"
                    android:layout_below="@+id/cbtv7"
                    android:layout_marginTop="30dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/worksans_regular"
                    android:background="@drawable/spinner_back"/>

                <Button
                    android:id="@+id/fcreate_batch"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_below="@+id/cb_trainer"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_fill"
                    android:fontFamily="@font/barlow_m"
                    android:onClick="fcreate_batch"
                    android:shadowColor="#000000"
                    android:text="CREATE BATCH"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />

            </RelativeLayout>
    </ScrollView>