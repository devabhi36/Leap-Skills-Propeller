<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/trainer_feedback1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:text="ACCOUNTABILITY"
        android:textAppearance="@style/TitleText1"
        android:background="@drawable/title_fill"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/trainer_feedback1"
        android:background="@drawable/ic_scattered_triangles"
        android:id="@+id/r21">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentHome"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingBottom="40dp">

    <TextView
        android:id="@+id/dtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="40dp"
        android:textAppearance="@style/FragmentText"
        android:fontFamily="@font/worksans_medium"/>
    <TextView
        android:id="@+id/trainer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trainer's Name"
        android:layout_marginLeft="130dp"
        android:layout_alignTop="@+id/dtv"
        android:textAppearance="@style/FragmentText"
        android:textColor="@color/button"/>

    <TextView
        android:id="@+id/dtv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leap-ID :"
        android:layout_below="@+id/dtv"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/FragmentText"
        android:fontFamily="@font/worksans_medium"/>
    <TextView
        android:id="@+id/trainer_leapID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trainer's Leap Id"
        android:layout_marginLeft="130dp"
        android:layout_alignTop="@+id/dtv1"
        android:textAppearance="@style/FragmentText"
        android:textColor="@color/button"/>

    <TextView
        android:id="@+id/dtv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password :"
        android:layout_below="@+id/dtv1"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/FragmentText"
        android:fontFamily="@font/worksans_medium"/>
    <TextView
        android:id="@+id/trainer_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DDMMYYYY"
        android:layout_marginLeft="130dp"
        android:layout_alignTop="@+id/dtv2"
        android:textAppearance="@style/FragmentText"
        android:textColor="@color/button"/>

    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/dtv2"
        android:layout_marginTop="20dp"
        android:background="#FCBF38"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/dtv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Center :"
        android:layout_below="@+id/line_1"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/FragmentText"
        android:fontFamily="@font/worksans_medium"/>
    <TextView
        android:id="@+id/trainer_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trainer's Center"
        android:layout_marginLeft="130dp"
        android:layout_alignTop="@+id/dtv3"
        android:textAppearance="@style/FragmentText"
        android:textColor="@color/button"/>

    <View
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/trainer_center"
        android:layout_marginTop="20dp"
        android:background="#FCBF38"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/dtv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROBLEMS REGISTERD :"
        android:layout_below="@+id/line_3"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/FragmentText"
        android:fontFamily="@font/worksans_medium"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="2"
        android:id="@+id/stu_pro_table"
        android:layout_below="@+id/dtv8"
        android:layout_marginTop="16dp">

        <TableRow>

            <TextView
                android:layout_width="220dp"
                android:layout_marginRight="5dp"
                android:layout_weight="5"
                android:fontFamily="@font/worksans_medium"
                android:text="Problem Name"
                android:textColor="@color/button"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="100dp"
                android:layout_marginRight="5dp"
                android:layout_weight="5"
                android:fontFamily="@font/worksans_medium"
                android:text="Date"
                android:textColor="@color/button"
                android:textSize="16dp"
                android:textStyle="bold"/>

        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">

            <TextView
                android:layout_weight="5"
                android:layout_marginRight="5dp"
                android:text="Problem Name 1"
                android:textAppearance="@style/StuList"
                android:textColor="@color/app_text" />

            <TextView
                android:layout_weight="5"
                android:layout_marginRight="5dp"
                android:text="DDMMYYYY"
                android:textAppearance="@style/StuList"
                android:textColor="@color/app_text" />
        </TableRow>

    </TableLayout>
</RelativeLayout>
    </ScrollView>
</RelativeLayout>