<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme">
    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/trainer_feedback1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="TRAINER LIST"
        android:textAppearance="@style/TitleText1"
        android:background="@drawable/title_fill"/>

    <RelativeLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainer_feedback1"
        android:padding="20dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_centerHorizontal="true">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context=".StudentFeedback">

                        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="4"
                            android:id="@+id/attendence_table">

                            <TableRow>

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_weight="5"
                                    android:fontFamily="@font/worksans_medium"
                                    android:text="Leap ID"
                                    android:textColor="@color/button"
                                    android:textSize="16dp" />

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="5"
                                    android:fontFamily="@font/worksans_medium"
                                    android:text="First Name"
                                    android:textColor="@color/button"
                                    android:textSize="16dp" />

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="5"
                                    android:fontFamily="@font/worksans_medium"
                                    android:text="Last Name"
                                    android:textColor="@color/button"
                                    android:textSize="16dp" />
                                <TextView
                                    android:layout_weight="5"
                                    android:layout_width="90dp"
                                    android:layout_marginRight="5dp"
                                    android:text="Batch"
                                    android:fontFamily="@font/worksans_medium"
                                    android:textColor="@color/button"
                                    android:textSize="16dp"/>
                            </TableRow>

                            <TableRow
                                android:layout_marginTop="10dp">

                                <TextView
                                    android:layout_weight="5"
                                    android:text="ls18000160"
                                    android:textAppearance="@style/Leap_ID"
                                    android:onClick="trainer_prob_list"/>

                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="5"
                                    android:text="Abhinay"
                                    android:textAppearance="@style/StuList"/>

                                <TextView
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="5"
                                    android:text="Shrivastav"
                                    android:textAppearance="@style/StuList"/>
                                <TextView
                                    android:layout_weight="5"
                                    android:layout_marginRight="5dp"
                                    android:text="Batch Name"
                                    android:textAppearance="@style/StuList"/>
                            </TableRow>
                        </TableLayout>
                    </RelativeLayout>
                </ScrollView>
            </HorizontalScrollView>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
</ScrollView>